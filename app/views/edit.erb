
<form action="/articles/<%= @article.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch" />
  <input type="text"/>
  Title: <input id="title" type="text" name="article[title]" value="<%= @article.title %>"/>
Content: <input id="content" type="text" name="article[content]" value="<%= @article.content %>"/>
<input type="submit" value="submit">
</form>
